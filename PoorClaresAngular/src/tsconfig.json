    "../typings/browser/ambient/angular-mocks/index.d.ts",
    "../typings/browser/ambient/angular-route/index.d.ts",
    "../typings/browser/ambient/angular/index.d.ts",
    "../typings/browser/ambient/jquery/index.d.ts",
    "app.ts",
    "controllers/mainController.ts",
    "controllers/navController.ts",
    "controllers/nunCarouselController.ts",
    "controllers/prayerRequestController.ts",
    "main.ts",
