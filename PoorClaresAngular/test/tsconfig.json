    "../typings/main/ambient/angular/index.d.ts",
    "../typings/main/ambient/jasmine/index.d.ts",
    "../typings/main/ambient/jquery/index.d.ts",
    "../src/app.routes.ts",
    "../src/app.ts",
    "../src/controllers/mainController.ts",
    "../src/controllers/navController.ts",
    "../src/controllers/nunCarouselController.ts",
    "../src/controllers/prayerRequestController.ts",
    "../src/main.ts",
    "../src/services/prayerRequestService.ts",
    "../src/services/siteSectionService.ts",
    "app.tests.ts",
    "controllers/mainController.tests.ts",
    "controllers/navController.tests.ts",
    "controllers/prayerRequestController.tests.ts",
